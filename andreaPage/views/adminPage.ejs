                        </div>
                        <div class="form-group">
                            <label>Image 5</label>
                            <input type="text" name="art[image5]" placeholder="Fifth Image">
                        </div>
                        <div class="form-group">
                            <label>Description</label>
                            <textarea name="art[body]" cols="30" rows="10"></textarea>
                        </div>
                        <button class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
